{
  "manifest_version": 3,
  "name": "Xtract Replies",
  "short_name": "Xtract",
  "version": "1.0.5",
  "description": "Extract replies from X.com posts and export as CSV/HTML. Ideal for researchers and journalists.",
  "author": "Siavash Keshmiri",
  "homepage_url": "https://x.com/siavashh",
  "icons": {
    "16": "assets/16.png",
    "32": "assets/32.png",
    "48": "assets/48.png",
    "128": "assets/128.png",
    "192": "assets/192.png",
    "512": "assets/512.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/16.png",
      "32": "assets/32.png",
      "48": "assets/48.png",
      "128": "assets/128.png",
      "192": "assets/192.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://x.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*/status/*"
      ],
      "js": [
        "main.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/icon.svg",
        "assets/48.png"
      ],
      "matches": [
        "https://x.com/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
